---
- name: Make sure we have a git directory
  file:
    path: /home/{{ username }}/gits
    state: directory
    owner: "{{ username }}"
    group: "{{ username }}"

- name: Cloning some gits
  git:
    repo: "{{ gitrepos }}" 
    dest: "/home/{{ username }}/gits/{{ item | split('.')[0] }}"
  with_dict: "{{ gitrepos }}"

- name: Fix permissions
  file:
    path: /home/{{ username }}/gits
    state: directory
    owner: "{{ username }}"
    group: "{{ username }}"
